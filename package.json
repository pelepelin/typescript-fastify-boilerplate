{
  "name": "typescript-fastify-boilerplate",
  "version": "0.0.1",
  "description": "Fastify application template with TypeScript and Jest",
  "author": "Konstantin Pelepelin",
  "license": "Unlicense",
  "private": true,
  "main": "./dist/app.js",
  "scripts": {
    "build": "tsc -p tsconfig.dist.json",
    "prebuild": "rimraf dist",
    "start": "node dist/main.js",
    "dev": "ts-node-dev --respawn --project tsconfig.dist.json src/main.ts",
    "test": "jest --coverage",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "lint-fix": "eslint --fix . && prettier --write .",
    "lint-fix:eslint": "eslint --fix .",
    "lint-fix:prettier": "prettier --write ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --no-coverage"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "dependencies": {
    "fastify": "^3.12.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "~4.16.1",
    "@typescript-eslint/parser": "~4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-prefer-arrow": "~1.2.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "ts-node-dev": "^1.1.1",
    "typescript": "~4.2.2"
  },
  "engines": {
    "node": "^14.15.0"
  }
}
